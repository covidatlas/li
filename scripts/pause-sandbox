#! /usr/bin/env node

/**
 * Pauses the Sandbox watcher to ensure pre-commit hooks don't accidentally initiate hydration
 */
const fs = require('fs')
const path = require('path')
const os = require('os')
const pauseFile = path.join(os.tmpdir(), '_pause-architect-sandbox-watcher')

const status = process.env.PAUSE

try {
  if (status === 'true') {
    if (!fs.existsSync(pauseFile)) {
      fs.writeFileSync(pauseFile, '\n')
    }
  }
  if (status === 'false') {
    if (fs.existsSync(pauseFile)) {
      fs.unlinkSync(pauseFile)
    }
  }
}
catch (err) { /* noop */ }
